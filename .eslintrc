{
  "extends": ["gristow"],
  "rules": {
    "no-console": 1,
    "semi": 0,
    "no-unused-vars": "warn",
    "@typescript-eslint/semi": [0],
    "@typescript-eslint/no-unused-vars": [1],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 2,
        "semi": false,
        "useTabs": false
      }
    ]
  }
}
